<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/browser_actions_bg_grey"
    android:layout_height="wrap_content">


    <RelativeLayout

        android:id="@+id/aricle_relative_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        >


        <RelativeLayout
            android:id="@+id/rel_11"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/ezy"
            >
            <ImageView
                android:id="@+id/cart_img"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5sp"
                android:src="@drawable/ic_cart_white"
                />
            <ImageView
                android:id="@+id/share_img"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_share_white"
                android:layout_toLeftOf="@+id/cart_img"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/bookmark_img"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/share_img"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bookmark_white"
                />
            <ImageView
                android:id="@+id/chat_sep"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/bookmark_img"
                android:src="@drawable/ic_vendor_chat"
                />

        </RelativeLayout>
        <ImageView
            android:layout_below="@+id/rel_11"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:id="@+id/article_image"
            android:layout_margin="15sp"
            />

        <RelativeLayout
            android:id="@+id/arti_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_image"
            android:background="@drawable/white_oval"
            >
            <TextView
                android:id="@+id/type_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="type"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:textSize="16sp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/Heading_text"
                android:layout_width="match_parent"
                android:layout_height="28sp"
                android:text="Heading"
                android:layout_below="@id/type_txt"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />


            <TextView
                android:id="@+id/article_aythor"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="author name"
                android:textStyle="bold"
                android:layout_marginStart="15sp"
                android:textSize="16sp"
                android:layout_below="@+id/Heading_text"
                android:layout_marginTop="5sp"
                android:maxLines="1"
                android:layout_marginBottom="15sp"
                />
            <TextView
                android:id="@+id/article_date"
                android:layout_width="120dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5sp"
                android:text="20-jun-2021"
                android:layout_below="@+id/Heading_text"
                android:textStyle="bold"
                android:layout_marginStart="15sp"
                android:layout_marginBottom="4sp"
                android:layout_marginEnd="15sp"
                android:textSize="16sp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arti_head"
            android:background="@drawable/white_oval"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginTop="25sp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:justificationMode="inter_word"
                />

        </RelativeLayout>




    </RelativeLayout>


</RelativeLayout>