<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_promotion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/white_new_oval"
        android:elevation="15dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        >
        <ImageView
            android:id="@+id/promo_icon"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            />

        <TextView
            android:id="@+id/day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 days to go"
            android:layout_above="@id/promo_heading"
            android:layout_toRightOf="@id/promo_icon"
            android:layout_marginStart="15sp"
            android:textColor="@color/orange_500"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/promo_heading"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="25sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/promo_icon"
            android:layout_marginStart="15sp"
            android:text="Ezy-Edu"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            />


    </RelativeLayout>




</RelativeLayout>