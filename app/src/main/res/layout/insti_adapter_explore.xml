<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/insti_relative"
        android:layout_margin="15sp"
        android:elevation="10dp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/white_oval"
        >

        <ImageView
            android:id="@+id/institution_image"
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:layout_height="150dp"
            />
        <TextView
            android:id="@+id/learn_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/institution_image"
            android:text="learning centre"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/orange_500"
            />
        <TextView
            android:id="@+id/insitute_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/learn_type"
            android:layout_marginStart="10sp"
            android:text="EZY-EDU"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/location_institute"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_below="@id/insitute_tittle"
            android:layout_marginStart="10sp"
            android:text="indonesia"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/location_institute"
            >
            <ImageView
                android:id="@+id/rating_img"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:src="@drawable/star_full"
                />
            <ImageView
                android:id="@+id/rating_img_empty"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:src="@drawable/empty"
                />


            <ImageView
                android:id="@+id/rating_img_1"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_1"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/rating_img_empty"
                android:src="@drawable/empty"
                />



            <ImageView
                android:id="@+id/rating_img_2"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_1"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />


            <ImageView
                android:id="@+id/rating_img_empty_2"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_1"
                android:src="@drawable/empty"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/rating_img_3"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_2"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_3"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_2"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_4"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_3"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/rating_img_empty_4"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_3"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>