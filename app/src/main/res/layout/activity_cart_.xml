<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart_Activity">




    <RelativeLayout
        android:id="@+id/rk_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F99E23"
        >
        <TextView
            android:id="@+id/main_crt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycer_cart"
        android:layout_width="match_parent"
        android:layout_above="@+id/prc_checkout"
        android:layout_marginBottom="20sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rk_cart" />

    <ImageView
        android:id="@+id/straight_to_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_1"
        android:layout_marginBottom="-10sp"
        android:src="@drawable/straight_line"
        />



        <Button
            android:id="@+id/prc_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5sp"
            android:background="@drawable/white_new_oval"
            android:layout_above="@+id/straight_to_nav"
            android:text="Proceed To Checkout"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="-5sp"
            android:visibility="gone"
/>





        <TextView
            android:id="@+id/ec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your cart is empty"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ec1"
            android:layout_below="@id/ec"
            android:layout_width="302dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="Looks like you haven't added any courses to your cart yet"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <Button
            android:id="@+id/openCourses"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/space_double"
            android:background="@drawable/btn_new_yellow_rounded"
            android:padding="@dimen/space"
            android:layout_below="@id/ec1"
            android:layout_centerHorizontal="true"
            android:text="Explore Courses"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/cart_empty_img"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="250dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cart_final"
        android:layout_below="@id/rk_cart"
        />



    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="15sp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_above="@id/home_txt"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_cen"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/explore_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/exp_btn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/explore_txt"
            android:layout_marginStart="11sp"
            android:src="@drawable/ic_explore" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_chat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/rel_1"
        android:layout_marginStart="5sp"
        >

        <TextView
            android:id="@+id/ms_livia_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ms Livia"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/chat_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/ms_livia_text"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_ms_livia" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_cart"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/rel_cen"
        android:layout_marginStart="5sp"
        >

        <TextView
            android:id="@+id/Cart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/cart_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:layout_marginStart="30dp"
            android:layout_above="@id/Cart_text"/>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rel_oth"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15sp"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/Others_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/others_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_others"
            android:layout_marginStart="5dp"
            android:layout_above="@id/Others_text"/>
    </RelativeLayout>






</RelativeLayout>