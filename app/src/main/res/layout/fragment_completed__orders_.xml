<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_ezy"
    tools:context=".Fragments.Completed_Orders_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/shimmer_frame_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/pending_order_adapter_shimmer"/>
            <include layout="@layout/pending_order_adapter_shimmer"/>
            <include layout="@layout/pending_order_adapter_shimmer"/>
            <include layout="@layout/pending_order_adapter_shimmer"/>
            <include layout="@layout/pending_order_adapter_shimmer"/>

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/completed_recyc"
       />

    <ImageView
        android:id="@+id/i11"
        android:layout_width="190sp"
        android:visibility="gone"
        android:layout_height="190sp"
        android:src="@drawable/empty_history"
        android:layout_marginTop="50sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/t11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Completed Orders"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="244dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/t12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the Latest Offer and Products on the Store"
        android:gravity="center"
        android:layout_marginStart="35sp"
        android:layout_marginEnd="35sp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:layout_marginTop="278dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/b11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="Explore Courses"
        android:background="@color/orange"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:padding="6sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        />



</FrameLayout>