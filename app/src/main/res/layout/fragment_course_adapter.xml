<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/course_card"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20sp"
        android:elevation="5dp"
        android:background="@drawable/white_oval"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_margin="10sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_course"
            />


        <TextView
            android:layout_below="@id/image_course"
            android:id="@+id/text_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:text="Python and Java"
            android:textSize="17sp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/course_inst_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:text="EZY-EDU"
            android:layout_marginBottom="10sp"
            android:textSize="17sp"
            android:textColor="@color/orange_500"
            android:maxLines="1"
            />

    </RelativeLayout>


</RelativeLayout>