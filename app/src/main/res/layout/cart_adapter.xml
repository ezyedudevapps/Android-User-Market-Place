<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:background="@drawable/white_oval"
        android:elevation="10sp"
        >

        <RelativeLayout
            android:id="@+id/rel_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/Cart_insti_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instoitution Name"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/remove_cart_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/orange"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/straight_line"
                android:layout_below="@id/Cart_insti_name"
                android:layout_marginBottom="-15dp"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/rel_new"
        >

        <ImageView
            android:id="@+id/cart_course_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cart_course_img"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/Cart_course_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Python 101"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/Cart_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cart_course_tittle"
                android:layout_marginTop="5dp"
                android:text="20,06,21"
                android:textSize="18sp" />

<RelativeLayout
    android:id="@+id/count_relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Cart_date_txt"
    >



            <TextView
                android:id="@+id/decrement"
                android:layout_width="20sp"
                android:layout_height="23sp"
                android:text="-"
                android:layout_marginTop="9sp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginStart="5sp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                />

            <TextView
                android:id="@+id/count"
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_toRightOf="@+id/decrement"
                android:text="1"
                android:layout_marginTop="10sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/increment"
                android:layout_width="20sp"
                android:layout_height="23sp"
                android:text="+"
                android:textAlignment="center"
                android:layout_toRightOf="@id/count"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginStart="5sp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textColor="@color/orange"
                />
</RelativeLayout>


            <TextView
                android:id="@+id/Cart_course_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Cart_date_txt"
                android:layout_marginStart="20sp"
                android:layout_toRightOf="@+id/count_relative"
                android:text="Price"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>