<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pending_relative"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/white_oval"
        android:elevation="10dp"
        android:layout_margin="10sp"
        >
        <TextView
            android:id="@+id/pending_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:background="@color/orange"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_pending"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_below="@+id/pending_head"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            />
        <TextView
            android:id="@+id/ven_tittle"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_toRightOf="@id/img_pending"
            android:layout_marginTop="19sp"
            android:layout_below="@id/pending_head"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:textSize="18sp"
            android:text="TES Institute"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/order_ref_id"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_toRightOf="@id/img_pending"
            android:layout_marginTop="5sp"
            android:layout_below="@id/ven_tittle"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:textSize="14sp"
            android:text="1234567890"
            android:textStyle="normal"
            android:textColor="@color/black"
            />

            <ImageView
                android:id="@+id/img_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/straight_line"
                android:layout_below="@id/img_pending"
                android:layout_marginTop="3dp"
/>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_marginTop="-5sp"
            android:layout_below="@id/img_sl"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:textSize="17sp"
            android:text="09 - sep - 21"
            android:textStyle="normal"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_marginTop="-5sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_sl"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:textSize="17sp"
            android:text="179000"
            android:textStyle="bold"
            android:textColor="@color/orange"
            />

    </RelativeLayout>
</RelativeLayout>