<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethodActivity">

    <ImageView
        android:id="@+id/bck_py"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_margin="8sp"
        android:src="@drawable/ic_left_arrow"
        />
    <TextView
        android:id="@+id/p_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Payment Method"
        android:layout_marginTop="15sp"
        android:textSize="18sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/vw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        android:layout_below="@+id/p_method"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vw"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/cc_dc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/cc_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/credit_card"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cc_img"
                    android:text="Credit Card"
                    android:layout_marginStart="10sp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cc_im"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/cc_img1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/credit_card"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cc_img1"
                android:text="Credit Card Instalmet"
                android:layout_marginStart="10sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15sp"
                />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>