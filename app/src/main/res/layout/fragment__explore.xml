<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_Explore">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_relative"
        android:layout_marginTop="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/institu_btn"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:background="@drawable/orange_oval"
            android:text="Institutions"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


        <Button
            android:id="@+id/rr2"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/og_sky"
            android:text="Courses"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="15sp"
            android:textStyle="bold"

            />



        <Button
            android:id="@+id/r33"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/og_purple"
            android:text="Near Me"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="15sp"
            android:textStyle="bold"
            />


        <Button
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/og_drawble"
            android:text="Tests"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:visibility="gone"
            android:layout_marginStart="15sp"
            android:textStyle="bold"
        />






    </LinearLayout>
    </ScrollView>

</FrameLayout>