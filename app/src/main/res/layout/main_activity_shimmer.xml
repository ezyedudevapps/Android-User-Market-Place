<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/course_card"
        android:layout_marginTop="10dp"
        android:layout_width="220dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10sp"
        android:elevation="10dp"
        android:background="@drawable/white_oval"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="15dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/image_course"
            android:background="@color/grey_200"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/course_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:layout_marginStart="10dp"
            android:layout_below="@id/image_course"
            android:textColor="@color/orange_500"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/course_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_course"
            android:background="@color/grey_200"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_below="@id/course_date"
            android:id="@+id/text_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:background="@color/grey_200"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/course_inst_author"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:background="@color/grey_200"
            android:layout_marginBottom="10sp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</RelativeLayout>