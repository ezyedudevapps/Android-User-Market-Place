<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/course_card"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10sp"
        android:elevation="10dp"
        android:background="@drawable/white_oval"
        android:layout_height="130dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10sp"
            android:layout_centerVertical="true"
            android:id="@+id/image_course"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_course"
            >

            <TextView
                android:id="@+id/course_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15-Aug-19"
                android:layout_marginStart="10dp"
                android:textColor="@color/orange_500"
                android:textStyle="bold"
                android:textSize="18sp"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/course_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_inst_author"
                android:text="2 weeks"
                android:textSize="18sp"
                android:textStyle="bold"

                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="Python and Java"
                android:textSize="22sp"
                android:singleLine="true"
                android:layout_below="@id/course_date"

                />
            <TextView
                android:id="@+id/course_inst_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_course"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="EZY-EDU"
                android:layout_marginBottom="10sp"
                android:textSize="17sp"
                android:singleLine="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>