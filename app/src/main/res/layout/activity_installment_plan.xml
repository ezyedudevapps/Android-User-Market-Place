<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstallmentPlanActivity">

    <ImageView
        android:id="@+id/bck_py"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_margin="8sp"
        android:src="@drawable/ic_left_arrow"
        />
    <TextView
        android:id="@+id/p_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Installment Plans"
        android:layout_marginTop="15sp"
        android:textSize="18sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/vw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        android:layout_below="@+id/p_method"
        />


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BRI"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:drawableEnd="@drawable/drop_down_icon"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/exp_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        />

    <TextView
        android:id="@+id/continue_ins_pay"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:layout_margin="15sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Continue"
        android:visibility="gone"
        />









</RelativeLayout>